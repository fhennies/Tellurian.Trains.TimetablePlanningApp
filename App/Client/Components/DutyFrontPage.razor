@inject IStringLocalizer<App> Localizer


@if (Item != null)
{
    <div class="duty meetingname">@Item.MeetingName</div>
    <div class="duty label">@Localizer["Operator"]</div>
    <div class="duty operator"></div>
    <div class="duty label">@Localizer["Duty"]</div>
    <div class="duty number">@Item.Number</div>
    <div class="duty days">@Item.Days</div>
    <div class="duty text">@Item.Name</div>
    <div class="duty text">@string.Format(CultureInfo.CurrentCulture, Localizer["Difficulty"], Item.Difficulty)</div>
    <div>
        <div>
            <div class="duty label">@Localizer["Start"]</div>
            <div class="duty time">@Item.StartTime</div>
        </div>
        <div>
            <div class="duty label">@Localizer["End"]</div>
            <div class="duty time">@Item.EndTime</div>
        </div>
    </div>
}

@code {
    [Parameter]
    public DriverDuty? Item { get; set; }
}
